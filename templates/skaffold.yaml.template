apiVersion: skaffold/v1
kind: Config
build:
  artifacts:
    - image: {{name}}
deploy:
  kubectl:
    manifests:
      - k8s.yaml
profiles:
  - name: dev
    activation:
      - kubeContext: minikube
        command: dev
    build:
      artifacts:
        - image: {{name}}
          sync:
            manual:
              - src: 'src/**/*.js'
                dest: '/usr/src/app'
          docker:
            dockerfile: Dockerfile.dev
