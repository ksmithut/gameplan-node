version: '3'
services:
  # Application
  {{name}}:
    image: {{name}}:dev
    build:
      context: .
      dockerfile: Dockerfile.dev
    depends_on: []
    environment: []
    volumes:
      - ./:/usr/src/app # For nodemon to watch for file changes
      - /usr/src/app/node_modules # So it doesn't use the local node_modules
    ports:
      - '3000:3000' # Application port
